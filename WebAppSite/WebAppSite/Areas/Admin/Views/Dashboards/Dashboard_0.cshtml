@{
    ViewData["Title"] = "Dashboard v.0";
}
<div class="text-center text-dark bg-warning bg-gradient mt-3 mb-3">
    <br />
    <h1><b> Панель управління користувачами </b></h1>
    <br />
</div>
<div>
    <a asp-action="Create" asp-area="admin" asp-controller="Dashboards" class="btn btn-primary mb-3 btn-lg px-5">Додати нового користувача</a>
</div>

<hr />
<div>
    <div class="row">
        <div class="col-lg-12">

            <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th data-hide="phone">Name</th>
                        <th data-hide="phone">E-mail</th>
                        <th class="text-right">Role</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>

                            <td class="text-right">
                                <div>
                                    <a href="Edit/@user.UserId"
                                       class="text-info">
                                        <i class="fa fa-pencil-square-o" style="font-size: 20px" aria-hidden="true"></i>
                                    </a>
                                    <a href="Delete/@user.UserId"
                                       class="text-danger">
                                        <i class="fa fa-trash-o" style="font-size: 20px" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="7">
                            <ul class="pagination pull-right"></ul>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


