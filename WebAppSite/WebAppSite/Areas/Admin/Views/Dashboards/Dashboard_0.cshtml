@{
    ViewData["Title"] = "Dashboard v.0";
}
<div class="text-center text-dark bg-warning bg-gradient mt-3 mb-3">
    <br />
    <h1><b> Панель управління користувачами </b></h1>
    <br />
</div>
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <div class="d-grid gap-4 d-md-block">
            <button type="button" class="btn btn-success btn-lg px-5">Додати<br> нового користувача</button>
            <button type="button" class="btn btn-warning btn-lg px-5">Редагувати<br> користувача</button>
            <button type="button" class="btn btn-danger btn-lg px-5">Видалити<br> користувача</button>
            <button type="button" class="btn btn-info btn-lg px-5">Переглянути<br> всіх користувачів</button>
        </div>
    </div>
    <div class="col-1"></div>
</div>
<hr />
<div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-secondary">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Ім'я</th>
                        <th scope="col">День народження</th>
                        <th scope="col">Ціна</th>
                        <th scope="col">Зображення</th>
                        <th scope="col">Дія</th>

                    </tr>
                </thead>
                <tbody>
                    @*@foreach (var item in Model)*@
                    @*{*@
                    <tr>
                        <th scope="row">@@item.Id</th>
                        <td>@@item.Name</td>
                        <td>@@item.BirthDay</td>
                        <td>@@item.Price</td>
                        <td>
                            <img src="/images/@@item.Image" width="150" alt="img" />
                        </td>

                        <td class="align-middle text-left" style="font-size: 20px">

                            <a asp-action="Edit"
                               class="fa fa-pencil-square-o text-info text-decoration-none cursor-pointer"
                               asp-controller="Animal"
                               asp-route-id="@@item.Id"></a>
                            <a asp-action="Delete"
                               class="fa fa-trash-o text-danger text-decoration-none cursor-pointer"
                               asp-controller="Animal"
                               asp-route-id="@@item.Id"></a>
                        </td>
                    </tr>
                    @*}*@


                </tbody>
            </table>
        </div>
    </div>
</div>


